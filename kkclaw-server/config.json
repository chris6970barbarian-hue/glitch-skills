{
  "name": "kkclaw-server",
  "version": "1.0.0",
  "description": "KKClaw optimized for Ubuntu/Raspbian server with heartbeat, auto-reconnect, recovery, and queue management",
  "author": "Glitch",
  "config": {
    "gateway": {
      "url": "http://localhost:18789",
      "apiKey": ""
    },
    "heartbeat": {
      "enabled": true,
      "interval": 30000
    },
    "reconnect": {
      "enabled": true,
      "maxRetries": 10
    },
    "models": {
      "default": "claude-opus-4-6",
      "fallback": "minimax-portal/MiniMax-M2.5"
    }
  }
}
